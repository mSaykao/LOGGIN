<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
            <Menu fx:id="menu" mnemonicParsing="false" text="Image">
              <items>
                <MenuItem fx:id="chooseImage" mnemonicParsing="false" text="Choose an image" />
                  <MenuItem fx:id="clearImage" mnemonicParsing="false" text="Clear" />
              </items>
            </Menu>
      </menus>
    </MenuBar>
      <ImageView fx:id="image" fitHeight="275.0" fitWidth="399.0" pickOnBounds="true" preserveRatio="true">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </ImageView>
  </children>
</VBox>
